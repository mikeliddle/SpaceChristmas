@page
@model SpaceChristmas_UX.Pages.RightWingModel
@{
    ViewData["Title"] = "Right Wing";
}
<h1>@ViewData["Title"]</h1>

<body onload="loadScreen()">
    <center>
        <div id="gameCanvas" style="background-color:#000000;width:700px;height:500px;">
            <div id="myrestartbutton" style="position: absolute; padding - top: 225px; padding - left: 300px; display: none; ">
                < button onclick = "restartGame()" > Try Again ?</button >
            </div>
            <div id="successLabel" style="position:relative;text-align:center;top: 30%;-ms-transform: translateY(-50%);transform: translateY(-50%);display:none;">
                <h1>Success!!!</h1>
            </div>
            <div id="instructionLabel" style="display:block;text-align:center;padding-top:30px;padding-left:30px;padding-right:30px;width:100%;">
                <h3>Use the arrow keys to move the ship through the course. The ship will move forward automatically but you can slow down or speed up with the left/right arrow keys.</h3>
            </div>
            <div id="mystartbutton" style="position:relative;top: 30%;-ms-transform: translateY(-50%);transform: translateY(-50%);text-align:center;display:block;">
                <button onclick="startThrusterFlight()" class="btn btn-primary">Start</button>
            </div>
        </div>
    </center>
</body>
<script src="~/js/RWController.js"></script>
